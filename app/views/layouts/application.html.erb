<!DOCTYPE html>
<html>
  <head>
    <title>Nikki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'base', media: 'all'%>
    <%= javascript_include_tag 'application'%>

  </head>

  <body>
    <header>
      <ul>
        <li><%=link_to "トップ","/top" %></li>
        <li><%=link_to "ランキング","/ranking" %></li>
        <li><%=link_to "最新の投稿","/newpost" %></li>
      </ul>
      <div id="right_side">
        <%=form_tag controller:"top",action:"index" do%>
          <%=text_field_tag "keyword" %>
          <%=submit_tag "検索" %>
        <%end %>

        <div id="icon">
          <%=link_to @current,:id=>"prof" do%>
            <%=image_tag 'prof.png' %>
          <%end %>
          <%=link_to "/setting",:id=>"conf" do%>
            <%=image_tag 'conf.png' %>
          <%end %>
        </div>
      </div>

      <div id="main_menu">

        <%= image_tag "post.png",:class=> "post-modal" %>
        <div id="postmodalwin" class="modalwin hide">
          <a herf="#" class="modal-close"></a>
          <h1>投稿</h1>
          <div class="modalwin-contents">
            <p>テキスト</p>
            <button>閉じる</button>
          </div>
        </div>
      </div>

  </header>

  <div id="main">
    <%= yield %>
  </div>

  </body>
</html>
