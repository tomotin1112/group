<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script><% @posts.each do |post| %>
  <div class="post">
    <div class="profile">
      <%= image_tag "/images/profile/test.png" %>
      <div class="name">
        <%=link_to post.account_name,"/"+post.target_id,:class=>"account_name"%>
        <%=link_to post.target_id,"/"+post.target_id ,:class=>"target_id"%>
      </div>

    </div>
    <% if post.count == 1 %>
      <% count = "one" %>
    <% elsif post.count == 2 %>
      <% count = "two" %>
    <% elsif post.count == 3 %>
      <% count = "three" %>
    <% elsif post.count == 4 %>
      <% count = "four" %>

    <% end %>
    <div class="image <%= count %>">
      <% i = 0 %>
      <% while i < post.count %>

        <div class="trim">
          <%=image_tag("/images/posts/" + post.target_id + "/" + post.post_id + "/" + i.to_s + ".jpg", :width => '100px', :height =>
              '100px',:class => "image-modal", data:{'id'=>post.target_id + post.post_id + i.to_s})%>

          <!--<div id="imagemodalwin" class="modalwin hide">-->
          <div id="<%=post.target_id + post.post_id + i.to_s%>" class="modalwin hide">
            <a herf="#" class="modal-close"></a>
            <h1>画像</h1>
            <div class="modalwin-contents">
              <%= image_tag("/images/posts/" + post.target_id + "/" + post.post_id + "/" + i.to_s + ".jpg", :width => '100px', :height =>
                  '100px') %>
              <button>閉じる</button>

            </div>
          </div>

        </div>

        <% i += 1 %>
      <% end %>
      </div>
  </div>

<% end %>